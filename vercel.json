{
  "version": 2,
  "buildCommand": "bash ./vercel-build.sh",
  "outputDirectory": "dist",
  "framework": null,
  "routes": [
    { 
      "src": "/assets/(.*)\\.js", 
      "headers": { 
        "content-type": "application/javascript",
        "cache-control": "public, max-age=31536000, immutable" 
      }
    },
    { 
      "src": "/assets/(.*)\\.css", 
      "headers": { 
        "content-type": "text/css",
        "cache-control": "public, max-age=31536000, immutable" 
      }
    },
    { 
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}